[Unit]
Description=Pihole instance

[Container]
Image=docker.io/pihole/pihole:latest
Pod=wirehole.pod
DNS=127.0.0.1
Environment="TZ=America/New_York"
Environment="FTLCONF_REPLY_ADDR4=0.0.0.0"
Environment=PIHOLE_DNS_=127.0.0.1:5353
EnvironmentFile=pihole.env
Volume=./data/pihole_config:/etc/pihole:Z
Volume=./data/dnsmasq.d:/etc/dnsmasq.d:Z
AutoUpdate=registry

[Service]
Restart=always